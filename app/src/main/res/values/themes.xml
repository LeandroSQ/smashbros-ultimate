<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Base application theme. -->
	<style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/blue</item>
		<item name="colorPrimaryVariant">@color/dark_blue</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/blue</item>
		<item name="colorSecondaryVariant">@color/blue</item>
		<item name="colorOnSecondary">@color/black</item>

		<!-- Status and navigation bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">@color/dark_blue</item>
		<item name="android:navigationBarColor" tools:targetApi="l">@color/dark_blue</item>

		<item name="android:textColor">@color/dark_gray</item>
	</style>

	<style name="Theme.App.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
		<item name="colorOnPrimary">@color/white</item>
		<item name="android:textColor">@color/white</item>
		<item name="titleTextColor">@color/white</item>
	</style>

	<style name="Theme.App.Button" parent="Widget.MaterialComponents.Button">
		<item name="android:backgroundTint">@color/white</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:paddingStart">20dp</item>
		<item name="android:paddingEnd">20dp</item>
		<item name="android:paddingTop">15dp</item>
		<item name="android:paddingBottom">15dp</item>
		<item name="textAllCaps">false</item>
		<item name="android:shadowRadius" tools:targetApi="p">20</item>
		<item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/transparent_blue</item>
	</style>

	<style name="Theme.App.OnBoarding">
		<!-- Status and navigation bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
		<item name="android:navigationBarColor" tools:targetApi="l">@color/blue</item>
	</style>

	<!-- Splash screen theme. -->
	<style name="Theme.App.Splashscreen" parent="Theme.SplashScreen">
		<item name="windowSplashScreenBackground">@color/darker_blue</item>
		<item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
		<item name="windowSplashScreenAnimationDuration">200</item>
		<item name="postSplashScreenTheme">@style/Theme.App</item>
	</style>

</resources>